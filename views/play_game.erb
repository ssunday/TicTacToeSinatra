<!doctype html>
<html lang="en">
<body>
  <%= @view.report_player_turn_and_marker %>
  <%= @view.report_whether_AI_or_player_turn %>
  <br>
  <table>
  <form action="/play_game" method="post">
  <tr>
    <td style="padding:0 15px 0 15px;">
      <% if @game_rules.location_valid_to_mark?(0) && @view.human_player_turn?%>
