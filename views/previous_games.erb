<h1> <a href = '/'> To go back to home page, click here. </a> </h1>

<h1> Unfinished Games </h1>
<% @unfinished_games.each do |unfinished_game| %>
  <br>
  <form action="/play_game" method="get">
  <button name="id" type="submit" value="<%= unfinished_game.id %>">Resume Game</button>
  </form>
  <h2> Player One Marker: <%= unfinished_game.player_one_marker %> </h2>
  <h2> Player Two Marker: <%= unfinished_game.player_two_marker %> </h2>
  <br>
<table>
  <tr>
    <td style="padding:0 15px 0 15px;">
    <%= unfinished_game.game_rules.get_location_value(0) %>
    </td>
